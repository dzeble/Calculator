#:kivy 2.0.0

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right" #align to the right
            font_size: 65
            font_name:"fonts/Lcd.ttf"
            size_hint: (1, 0.15)
            #background_normal: ""
            #background_color: (0,0,0,1)
        
        GridLayout: 
            cols: 4
            rows: 5 
#row 
#1
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "%"

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "<<"
                on_press: root.remove()

            Button:
                id: clear
                size_hint: (0.2,0.2)
                font_size: 32
                text: "C"
                on_press: root.clear()

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "div"
                on_press: root.math_sign("/")


#2
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "7"
                on_press: root.button_press(7)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "8"
                on_press: root.button_press(8)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "9"
                on_press: root.button_press(9)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "mul"
                on_press: root.math_sign("*")


#3
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "4"
                on_press: root.button_press(4)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "5"
                on_press: root.button_press(5)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "6"
                on_press: root.button_press(6)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "sub"
                on_press: root.math_sign("-")


#4
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "1"
                on_press: root.button_press(1)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "2"
                on_press: root.button_press(2)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "3"
                on_press: root.button_press(3)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "add"
                on_press: root.math_sign("+")



#5
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "+/-"
                on_press: root.pos_neg()

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "0"
                on_press: root.button_press(0)

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                background_color:(0,0.7,1,1)
                text: "."
                on_press: root.dot()

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "="
                on_press: root.equals()